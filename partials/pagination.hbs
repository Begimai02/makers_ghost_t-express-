<style>
  .pagination li a{
    font-size: 14px;
  }
  .page-item a{
    font-size: 18px !important;
  }
  .theme-pagination-one ul li{
    font-size: 14px;
  }

</style>


<nav aria-label="Page navigation example" class="theme-pagination-one pt-15">
  <ul class="pagination">
    {{#if prev}}
    <li class="page-item">
      <a class="page-link" href="{{page_url prev}}" aria-label="Previous">
        <span  aria-hidden="true">&laquo; Недавние</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    {{/if}}
    <li class="page-item disabled">
      <a class="page-link">стр {{page}} из {{pages}}</a> 
    </li>

    {{#if next}}
    <li class="page-item">
      <a class="page-link" href="{{page_url next}}" aria-label="Next">
        <span aria-hidden="true">Предыдущие &raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
    {{/if}}
  </ul>
</nav>
